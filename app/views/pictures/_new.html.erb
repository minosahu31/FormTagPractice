<h1>Pictures#new</h1>
<p>Find me in app/views/pictures/new.html.erb</p>
<%= form_tag({ controller: "pictures", action: "create" }, remote: true, method: :post) do %>
	<p>
		<%= label_tag(:name, "Name:") %>
		<%= text_field_tag :name %>
	</p>
	<p>
		<%= label_tag(:picture_for, "Select:") %>	
		<%= radio_button_tag(:picture_for, "Product") %>
		<%= label_tag(:picture_for_product, "Product") %>
		<%= radio_button_tag(:picture_for, "Employee") %>
		<%= label_tag(:picture_for_employee, "Employee") %>
	</p>
	<p>
		<div id="product_list">	
			<%= label_tag(:selection1,"Select one option:") %>
			<%= select_tag "selection1", options_from_collection_for_select(@products, "id", "name") %>
		</div>
		<div id="employee_list">
			<%= label_tag(:selection2,"Select one option:") %>
			<%= select_tag "selection2", options_from_collection_for_select(@employees, "id", "name") %>
		</div>	
	</p>		
	<%= submit_tag "Create" %>
<% end %>