<h1>Products#edit</h1>
<p>Find me in app/views/products/edit.html.erb</p>
<%= form_tag({controller: "products", action: "update"}, remote: true, method: "patch", class: "nifty_form") do%>
	<p> <%= label_tag(:name, "Name:") %>
		<%= text_field_tag :name, @product.name %>
	</p>
	<p>	
		<%= label_tag(:brand, "Brand:") %>
		<%= text_field_tag :brand, @product.brand %>
	</p>
	<p>
		<%= label_tag(:description, "Description:") %>
		<%= text_area_tag :description, @product.description %>
	</p>
	<%= submit_tag("Update") %>
<% end %>